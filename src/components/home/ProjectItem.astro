---
import { Image } from "astro:assets";

const { project } = Astro.props;
const { name, slug, thumbnail } = project;
---

<li transition:name=`image${ slug }`>
  <a class="portfolio__image" href={`/proyectos/${slug}`}>
    <Image src={thumbnail} width={720} height={648} alt={name} />
  </a>
</li>

<style>
  li {
    cursor: pointer;
    overflow: hidden;
  }

  li img {
    object-fit: cover;
    transition-timing-function: cubic-bezier(0.1, 1, 1, 1);
    transition-duration: 0.6s;
  }

  li:hover img {
    opacity: 0.5;
    rotate: 2deg;
    transform: scale(1.1);
  }

  li:nth-child(-n + 3) {
    flex-basis: calc(100% / 3);
  }

  li:nth-child(n + 4) {
    flex-basis: calc(100% / 2);
  }

  li:nth-child(n + 6) {
    flex-basis: calc(100% / 3);
  }

  .portfolio__image {
    height: 100%;
    width: 100%;
  }

  .portfolio__image img {
    height: 100%;
    object-fit: cover;
    position: relative;
    width: 100%;
  }
</style>
