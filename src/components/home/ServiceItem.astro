---
import { Image } from 'astro:assets';
import { Button } from "../../components";
const { service } = Astro.props;
const { color, icon, name, description, slug } = service;
---

<li class="grid__item">
	<h2 class="title">
		<a href={ `/servicios/${ slug }` }>{ name }</a>
	</h2>
	<a href={ `/servicios/${ slug }` } class="icon">
		<Image src={ icon } alt={ name } height="48" width="48" />
		<span style={`background-color: #${ color };`}></span>
	</a>
	<p>{ description }</p>
	<Button size='small' label='Conoce mÃ¡s' isLink link={ `/servicios/${ slug }` } />
</li>

<style>
    p{
        margin: 10px 0;
        position: relative;
        z-index: 2;
    }

    .title {
        color: var(--dark);
        font-size: 1.125em;
        font-weight: bold;
        margin-bottom: 16px;
        position: relative;
        z-index: 2;
    }

    .icon {
        align-items: center;
        display: flex;
        height: 80px;
        justify-content: center;
        position: relative;
        width: 80px;
        z-index: 1;
    }

    .icon span {
        background-color: var(--gray);
        border-radius: 40px;
        left: 0;
        height: 100%;
        opacity: 0.4;
        position: absolute;
        top: 0;
        width: 100%;
        z-index: 1;
    }

    .icon img {
        position: relative;
        z-index: 2;
    }

    p {
        font-size: 14px;
        line-height: 1.5em;
        margin: 16px 0 24px;
    }

    .grid__item:hover .icon span{
        transform: scale(1.3);
    }
</style>